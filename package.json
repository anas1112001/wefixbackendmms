{
  "name": "mms-backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently --kill-others \"tsc -w\" \"nodemon -q -w dist dist/server.js\"",
    "lint": "yarn lint:fix",
    "lint:fix": "eslint --ext .ts . --fix",
    "migrate:create": "tsc && node dist/migrator.js create",
    "migrate:generate": "tsc && node dist/migrator.js generate",
    "migrate:auto": "tsc && node dist/migrator.js auto",
    "migrate:up": "tsc && node dist/migrator.js up",
    "migrate:down": "tsc && node dist/migrator.js down",
    "migrate:status": "tsc && node dist/migrator.js status",
    "migrate:clean": "rm -f src/db/migrations/*.ts dist/db/migrations/*.js",
    "pretest": "eslint --ext .ts . --fix --ignore-path .gitignore .",
    "start": "tsc && node dist/server.js",
    "test": "cp -n default.env .env; jest",
    "test-coverage": "yarn test a --watchAll=false --coverage",
    "test:watch": "jest --verbose --detectOpenHandles",
    "copy-public": "ncp src/public dist/public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./precommit.sh"
    }
  },
  "keywords": [],
  "author": "jadabuawwad@outlook.com",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-no-exclusive-tests": "^1.0.0-rc.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-sort-export-all": "^1.4.1",
    "jest": "^29.7.0",
    "jest-coverage-ratchet": "^0.2.3",
    "jest-extended": "^4.0.2",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "umzug": "^3.4.0"
  },
  "dependencies": {
    "@sequelize/core": "^7.0.0-alpha.29",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.1",
    "@types/node-cron": "^3.0.11",
    "@types/validator": "^13.11.6",
    "add": "2.0.6",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "4.7.0",
    "firebase-tools": "^13.2.1",
    "fs-extra": "^11.2.0",
    "global": "^4.4.0",
    "husky": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.2",
    "node-cron": "^3.0.3",
    "openapi-types": "^12.1.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redoc-express": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.35.0",
    "sequelize-cli-typescript": "^3.2.0-c",
    "sequelize-typescript": "^2.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "yarn": "1.22.21"
  },
  "jest": {
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(tsx?)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testRegex": "(/src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/services/"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "coverageReporters": [
    "text",
    "json-summary",
    "html"
  ],
  "reporters": [
    "default",
    "jest-junit"
  ],
  "files": [
    "public/**/*"
  ]
}